<!DOCTYPE html>
<html>

<head>
  <title>Todos</title>
  <style>
    /* CSS styles */

    /* CSS styles */

    body {
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      flex-direction: column;
      width: 500px;
      height: 500px;
      margin: 0 auto;
      /* justify-content: center; */
      align-items: center;
      text-align: center;
      margin-top: 10% !important;
      border: 1px solid #ccc;
      box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2);
    }

    h1 {
      color: #333;
      text-align: center;
      margin-top: 20px;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    .ul {
      width: 100%;
      overflow: auto;
    }

    li {
      margin-bottom: 10px;
    }

    .completed {
      text-decoration: line-through;
    }

    .delete-button {
      background-color: #f44336;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }

    .delete-button:hover {
      background-color: #d32f2f;
    }

    button {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
      margin: 10px;
    }

    button:hover {
      background-color: #45a049;
    }

    form {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 10px;
    }

    input[type="text"] {
      padding: 5px;
      margin-right: 5px;
      width: 200px;
    }

    .shadow {
      width: 100%;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="shadow">
      <h1>Your Todo List</h1>
      <button onclick="addTodo()">Add Todo</button>
      <button class="delete-button" onclick="logOut()">Logout</button>
      <div id="addTodoModal" style="display: none;">
        <span>
          <form action="/todo" method="POST">
            <input type="text" id="newTodoTitle" name="title" placeholder="Enter Todo" required>
            <button type="submit">Add</button>
            <button class="delete-button" onclick="cancelTodo()">Cancel</button>
          </form>
        </span>
      </div>
    </div>

    <div class="ul">
      <ul>
        <% todos.forEach((todo)=> { %>
          <li>
            <input id="checkbox-<%= todo.id %>" type="checkbox" <% if (todo.completed) { %>checked disabled<% } %>
              onchange="updateTodoStatus('<%= todo.id %>', '<%= todo.title %>')" />
                  <span <% if (todo.completed) { %>class="completed"<% } %>>
                      <%= todo.title %>
                  </span>
                  <button class="delete-button" onclick="deleteTodo('<%= todo.id %>')">Delete</button>
          </li>
          <% }) %>
      </ul>
    </div>

  </div>

  <script>
    // JavaScript code

    function updateTodoStatus(todoId, title) {
      const checkbox = document.getElementById(`checkbox-${todoId}`);
      const completed = checkbox.checked;

      fetch(`/todo/${todoId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          title: title,
          completed: completed,
        }),
      })
        .then((response) => {
          response.json()
          window.location.reload();

        })
        .catch((error) => console.error(error));
    }

    function deleteTodo(todoId) {
      fetch(`/todo/${todoId}`, {
        method: 'DELETE',
      })
        .then((response) => {
          response.json()
          window.location.reload();

        })
        .catch((error) => console.error(error));
    }

    function addTodo() {
      const addTodoModal = document.getElementById('addTodoModal');
      addTodoModal.style.display = 'block';
    }

    function cancelTodo() {
      // Reset the input field and hide the add todo modal
      document.getElementById('newTodoTitle').value = '';
      const addTodoModal = document.getElementById('addTodoModal');
      addTodoModal.style.display = 'none';
    }

    function logOut() {
      fetch(`/user/logout`, {
        method: 'POST',
      })
        .then((response) => {
          console.log(response)
          window.location.href = '/';
        })
        .catch((error) => console.error(error));
    }
  </script>
</body>

</html>